@model JoycePieShop.Models.Pie

<h2>@Model.Name</h2>
<div class="row">
    <div class="thumbnail col-sm-6 col-lg-10 col-md-8 card">
        <div class="card-body">
            <img alt="Model.Name" src="@Model.ImageUrl" class="col-sm-6 col-lg-10 col-md-8 card-img-top" />
            <div class="caption-full">
                @*<h3>@pie.Price.ToString("c")</h3>*@
                <h4 class="float-end me-4">$@Model.Price</h4>
                <h4><a asp-action="Index">@Model.Name</a></h4>
                <h4>@Model.ShortDescription</h4>
                <p>@Model.LongDescription</p>
            </div>
        </div>
    </div>
</div>