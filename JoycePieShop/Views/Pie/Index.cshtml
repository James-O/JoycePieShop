@*@model IEnumerable<JoycePieShop.Models.ViewModels.PieViewModel>*@
@*@model JoycePieShop.Models.ViewModels.PieViewModel*@
@model JoycePieShop.Models.ViewModels.PieVM




@*<h2>@ViewBag.Title</h2>*@

<h2>@Model.Title</h2>
@foreach (var pie in Model.Pies)
{
    <div class="col-sm-3 col-lg-3 col-md-3 card m-2">
        <div class="thumbnail card-body">
            <a asp-controller="Pie" asp-action="Details" asp-route-Id="@pie.Id"><img src="@pie.ImageThumbnailUrl" class="card-img-top"/></a>
            <div class="card-footer">
                @*<h3>@pie.Price.ToString("c")</h3>*@
                <h4 class="float-end me-2">$@pie.Price</h4>
                <h4><a asp-controller="Pie" asp-action="Details" asp-route-Id="@pie.Id">@pie.Name</a></h4>
            </div>
            <p data-bs-toggle="modal" data-bs-target="#exampleModal">@pie.ShortDescription</p>
        </div>
    </div>
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                 @*<partial name="_ModalPopUp" for="Pie" />*@
                @Html.Partial("_ModalPopUp")
                @*@ViewBag.Modals*@
            
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
